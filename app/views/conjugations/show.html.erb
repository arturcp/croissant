<div class="row search-row">
  <div class="col s2 m1 hide-on-med-and-down"></div>
  <div class="col s8 m9">
    <div class="search-wrapper">
      <i class="material-icons">search</i>
      <input type="text" name="verb" class="search-input z-depth-2"
        placeholder="Pesquisar" id="search" value="<%= @verb&.verb %>">
    </div>
  </div>

  <div class="col s2 m1">
    <button class="btn search-submit waves-effect waves-light" type="submit"
      name="action" id="search-button" data-url="<%= conjugation_path %>">Search</button>
  </div>
  <div class="col s1"></div>
</div>

<% if @verb %>
  <% @tense_modes.each do |tense_mode| %>
    <div class="row">
      <div class="col s12">
        <div class="alert alert-blank center-align">
          <b><%= tense_mode.name %></b>
        </div>
      </div>
    </div>

    <div class="row">
      <% tense_mode.verb_tenses.each do |verb_tense| %>
        <div class="col s12 m6 l4">
          <%= render 'shared/card', title: verb_tense.tense do %>
            <%= render 'shared/conjugation', verb: @verb, verb_tense: verb_tense %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
