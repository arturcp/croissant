<div class="row">
  <div class="col s2 m1 hide-on-med-and-down"></div>
  <div class="col s8 m9">
    <div class="search-wrapper">
      <i class="material-icons">search</i>
      <input type="text" name="verb" class="search-input z-depth-2"
        placeholder="Pesquisar" id="search" value="<%= @verb if @verb %>">
    </div>
  </div>

  <div class="col s2 m1">
    <button class="btn search-submit waves-effect waves-light" type="submit"
      name="action" id="search-button" data-url="<%= conjugation_path %>">Search</button>
  </div>
  <div class="col s1"></div>
</div>

<% if @verb %>
  <div class="row">
    <div class="col s4">
      <%= render 'shared/card', title: 'teste' do %>
        hello world
      <% end %>
    </div>
  </div>
<% end %>
