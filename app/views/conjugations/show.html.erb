<div class="row">
  <div class="col s2 m1 hide-on-med-and-down"></div>
  <div class="col s8 m9">
    <%= form_tag root_path do %>
      <div class="search-wrapper">
        <i class="material-icons">search</i>
        <input type="text" name="query" class="search-input z-depth-2"
          placeholder="Pesquisar" id="search" value="<%= @query if @query %>">
      </div>
    <% end %>
  </div>

  <div class="col s2 m1">
    <button class="btn search-submit waves-effect waves-light" type="submit"
      name="action" id="search-button">Search</button>
  </div>
  <div class="col s1"></div>
</div>
