<div class="card">
  <% if local_assigns[:image] %>
    <div class="card-image">
      <img src="<%= image %>">
    </div>
  <% end %>

  <div class="card-content">
    <span class="card-title"><%= title %></span><br />
    <%= yield %>
  </div>

  <% if local_assigns[:action] %>
    <div class="card-action">
      <%= render action.to_s %>
    </div>
  <% end %>
</div>
